<% include ../views/partials/header %>

<main>
    <section class="atf">
        <div>
            <h1>Welcome to GitVote!</h1>
            <hr>
            <% if (!currentUser) { %>
                <p>An open-source polling community for all Github developers! <a href="/auth/github/" class="ui inverted tiny green button">Sign in</a> and peruse our polls!</p>
                <a href="/polls" class="ui medium primary button">View all Polls</a>
            <% } else { %>
                <p>An open-source polling community for all Github developers!</p>
                <a href="/polls" class="ui medium primary button">View all Polls</a>
                <a href="/polls/new" class="ui medium green button">Submit new Poll</a>
            <% } %>
        </div>
    </section>
    <% include ../views/partials/recent %>
</main>

<% include ../views/partials/footer %>